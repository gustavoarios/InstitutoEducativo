@model IEnumerable<Instituto.C.Models.Profesor>

@{
    ViewData["Title"] = "Profesores";
    var esEmpleado = User.IsInRole("EmpleadoRol");
}

<h1>Profesores</h1>

@if (esEmpleado)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Agregar Profesor</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Materias que dicta</th>

            @if (esEmpleado)
            {
                <th>@Html.DisplayNameFor(model => model.Legajo)</th>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.FechaAlta)</th>
                <th>@Html.DisplayNameFor(model => model.DNI)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            }

            @if (esEmpleado)
            {
                <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>

                <td>
                    @if (item.MateriasCursada?.Any() == true)
                    {
                        <ul class="mb-0 ps-3">
                            @foreach (var mc in item.MateriasCursada)
                            {
                                <li>@mc.Materia?.Nombre</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No asignado</span>
                    }
                </td>

                @if (esEmpleado)
                {
                    <td>@Html.DisplayFor(modelItem => item.Legajo)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaAlta)</td>
                    <td>@Html.DisplayFor(modelItem => item.DNI)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                }

                @if (esEmpleado)
                {
                    <td>
                        <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

    

