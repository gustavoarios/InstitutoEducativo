@model IEnumerable<Instituto.C.Models.Profesor>

@{
    ViewData["Title"] = "Profesores";
    var esAlumno = User.IsInRole("AlumnoRol");
}

<h1>Profesores</h1>

@if (User.IsInRole("EmpleadoRol"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            @if (User.IsInRole("EmpleadoRol"))
            {
                <th>@Html.DisplayNameFor(model => model.Legajo)</th>
                <th>@Html.DisplayNameFor(model => model.UserName)</th>
                <th>@Html.DisplayNameFor(model => model.FechaAlta)</th>
                <th>@Html.DisplayNameFor(model => model.DNI)</th>
                <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                <th>@Html.DisplayNameFor(model => model.Direccion)</th>
                //<th>@Html.DisplayNameFor(model => model.Activo)</th>
            }
            
            @if (User.IsInRole("EmpleadoRol"))
            {
                <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                @if (User.IsInRole("EmpleadoRol"))
                {
                    <td>@Html.DisplayFor(modelItem => item.Legajo)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaAlta)</td>
                    <td>@Html.DisplayFor(modelItem => item.DNI)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                    <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                    //<td>@Html.DisplayFor(modelItem => item.Activo)</td>
                }

                @if (User.IsInRole("EmpleadoRol"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </td>
                }
            </tr>
        }
    </tbody>
    

