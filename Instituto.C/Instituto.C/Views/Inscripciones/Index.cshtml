@model IEnumerable<Instituto.C.Models.Inscripcion>

@{
    ViewData["Title"] = "Inscripciones";
}

<h1>Listado de Inscripciones</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Alumno</th>
            <th>Materia Cursada</th>
            <th>Fecha de Inscripción</th>
            <th>Activa</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.AlumnoId - @item.Alumno?.NumeroMatricula - @item.Alumno?.Nombre @item.Alumno?.Apellido
                </td>
                <td>
                    @item.MateriaCursadaId - @item.MateriaCursada?.CodigoCursada
                </td>
                <td>@item.FechaInscripcion.ToShortDateString()</td>
                <td>@(item.Activa ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
