@model Instituto.C.Models.Inscripcion

@{
    ViewData["Title"] = "Crear Inscripción";
}

<h1>@ViewData["Title"]</h1>

<h4>Inscripción</h4>
<hr />

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Campo Alumno -->
            @if (User.IsInRole("AlumnoRol"))
            {
                <input type="hidden" asp-for="AlumnoId" />
            }
            else
            {
                <div class="form-group">
                    <label class="control-label">Alumno</label>
                    <select asp-for="AlumnoId" class="form-control" asp-items="@(ViewData["AlumnoId"] as SelectList)"></select>
                    <span asp-validation-for="AlumnoId" class="text-danger"></span>
                </div>
            }

            <!-- Campo MateriaCursada -->
            <div class="form-group">
                <label class="control-label">Materia</label>
                <select asp-for="MateriaCursadaId" class="form-control" asp-items="@(ViewData["MateriaCursadaId"] as SelectList)">
                    <option value="">-- Seleccioná una cursada --</option>
                </select>
                <span asp-validation-for="MateriaCursadaId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MateriasActuales">Volver al listado</a>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}



