@model Instituto.C.Models.Inscripcion

@{
    ViewData["Title"] = "Eliminar Inscripción";
}

<h1>Eliminar Inscripción</h1>
<hr />
<h4>¿Estás seguro que deseas eliminar esta inscripción?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-4">Alumno</dt>
        <dd class="col-sm-8">@Model.Alumno?.NumeroMatricula - @Model.Alumno?.Nombre @Model.Alumno?.Apellido</dd>

        <dt class="col-sm-4">Materia Cursada</dt>
        <dd class="col-sm-8">@Model.MateriaCursada?.CodigoCursada</dd>

        <dt class="col-sm-4">Fecha de Inscripción</dt>
        <dd class="col-sm-8">@Model.FechaInscripcion.ToShortDateString()</dd>

        <dt class="col-sm-4">Activa</dt>
        <dd class="col-sm-8">@(Model.Activa ? "Sí" : "No")</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="AlumnoId" />
    <input type="hidden" asp-for="MateriaCursadaId" />
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index">Cancelar</a>
</form>
