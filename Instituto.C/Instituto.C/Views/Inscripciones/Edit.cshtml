@model Instituto.C.Models.Inscripcion

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Inscripción</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Clave compuesta: AlumnoId + MateriaCursadaId -->
            <input asp-for="AlumnoId" type="hidden" />
            <input asp-for="MateriaCursadaId" type="hidden" />

            <!-- Mostrar alumno (solo lectura) -->
            <div class="form-group">
                <label>Alumno</label>
                <input class="form-control"
                       value="@Model.Alumno?.NumeroMatricula - @Model.Alumno?.Nombre @Model.Alumno?.Apellido"
                       readonly />
            </div>

            <!-- Mostrar materia cursada (solo lectura) -->
            <div class="form-group">
                <label>Materia Cursada</label>
                <input class="form-control"
                       value="@Model.MateriaCursada?.CodigoCursada"
                       readonly />
            </div>

            <!-- Fecha de inscripción: no editable -->
            <input asp-for="FechaInscripcion" type="hidden" />
            <div class="form-group">
                <label>Fecha de Inscripción</label>
                <input class="form-control" value="@Model.FechaInscripcion.ToShortDateString()" readonly />
            </div>

            <!-- Activa: editable -->
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Activa" /> @Html.DisplayNameFor(model => model.Activa)
                </label>
            </div>

            <!-- Botón guardar -->
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
