@model Login

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<!-- Contenedor centrado -->
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <!-- Recuadro visual con sombra y bordes redondeados -->
    <div class="login-card p-5">
        <h2 class="text-primary text-center mb-4 titulo-etna">Iniciar Sesión</h2>

        <form asp-action="IniciarSesion">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input type="checkbox" asp-for="Recordarme" class="form-check-input" id="recordarmeCheck" />
                <label class="form-check-label" for="recordarmeCheck" asp-for="Recordarme"></label>
            </div>

            <div class="d-grid">
                <input type="submit" value="Iniciar sesión" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


           