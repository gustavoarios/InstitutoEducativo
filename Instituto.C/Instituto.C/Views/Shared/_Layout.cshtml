<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Instituto Educativo | @ViewData["Title"]</title>


	<!-- Bootstrap -->
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

	<!-- FontAwesome para íconos (✉ ☎ headset, etc.) -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-1Z8s2eIqYIvD1W3cC8yAA2C8q7T5QsXYeL+NzkeY9IqWqZbKAIrA2M9Uz0N57Mk1p/jNMuPIx9OyNGm8eEGZ3g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	<!-- Estilos personalizados -->
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Instituto.C.styles.css" asp-append-version="true" />
	<link rel="icon" type="image/png" href="/images/favicon.png" />

</head>

<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
					<img src="~/images/logo-del-instituto.png" alt="Logo Instituto.C" style="height:40px; margin-right:8px;" />
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if(User.IsInRole("EmpleadoRol")){
							<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="Dashboard">Inicio</a>
							</li>
						} else{							
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
						</li>
						}

						<li class="nav-item">
							<a class="nav-link text-dark" asp-controller="Home" asp-action="Nosotros">Nosotros</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Profesores" asp-action="Index">Profesores</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Carreras" asp-action="Index">Carreras</a>
						</li>

						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Materias" asp-action="Index">Materias</a>
						</li>

						@if (User.Identity.IsAuthenticated)
						{

							<li class="nav-item">
								<a class="nav-link text-dark" asp-area="" asp-controller="Calificaciones" asp-action="Index">Calificaciones</a>
							</li>
				
							if(User.IsInRole("EmpleadoRol")){
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Empleados" asp-action="Index">Empleados</a>
								</li>

								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Alumnos" asp-action="Index">Alumnos</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="MateriasCursadas" asp-action="Index">Materias Cursadas</a>
								</li>
								<li class="nav-item">
									<a class="nav-link text-dark" asp-area="" asp-controller="Inscripciones" asp-action="Index">Inscripciones</a>
								</li>
							}

							@if (User.IsInRole("ProfesorRol"))
							{
								<li class="nav-item">
									<a class="nav-link text-dark" asp-controller="Profesores" asp-action="MisMaterias">Mis Materias</a>
								</li>
							}


							@if (User.IsInRole("AlumnoRol")){
								<li class="nav-item">
									<a class="nav-link text-dark" asp-controller="Inscripciones" asp-action="MateriasActuales">Mis Materias</a>
								</li>

								<li class="nav-item">
									 <a class="nav-link text-dark" asp-controller="Calificaciones" asp-action="MiPromedio">Mi Promedio</a>
								</li>
							}

						}
					</ul>
					<ul class="navbar-nav">
						@if (!User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="btn btn-primary btn-sm" asp-action="IniciarSesion" asp-controller="Account">Acceso</a>
							</li>
							<li class="nav-item" style="margin-left: 10px;"> 
								<a class="btn btn-primary btn-sm" asp-action="Registrar" asp-controller="Account">Registrarse</a>
							</li>

						}
						else
						{
						//TODO<span>@User.Identity.Name</span>
							<li class="nav-item">
								<span class="nav-link text-dark">Bienvenido, @User.Identity.Name!</span>
							</li>
							<li class="nav-item">
								<a class="btn btn-danger btn-sm" asp-controller="Account" asp-action="CerrarSesion">Cerrar sesión</a>
							</li>

						}
					</ul>
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - Instituto Educativo
			@* <a asp-action="Seed" asp-controller="PreCarga" class="btn btn-sm btn-info">Pre Carga Db</a> *@
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

