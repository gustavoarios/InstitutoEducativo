@model Instituto.C.Models.Calificacion

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Calificación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Fecha: no editable -->
            <input asp-for="Fecha" type="hidden" />
            <div class="form-group">
                <label class="control-label">Fecha de Calificación</label>
                <input class="form-control" value="@Model.Fecha.ToShortDateString()" readonly />
            </div>

            <!-- Nota -->
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <select asp-for="Nota" class="form-control" asp-items="ViewBag.Notas"></select>
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>

            <!-- Profesor -->
            <div class="form-group">
                <label asp-for="ProfesorId" class="control-label"></label>
                <select asp-for="ProfesorId" class="form-control" asp-items="ViewBag.ProfesorId"></select>
                <span asp-validation-for="ProfesorId" class="text-danger"></span>
            </div>

            <!-- AlumnoId oculto + visualización -->
            <input asp-for="AlumnoId" type="hidden" />
            <div class="form-group">
                <label>Alumno</label>
                <input class="form-control" value="@Model.Alumno?.NumeroMatricula - @Model.Alumno?.Nombre @Model.Alumno?.Apellido" readonly />
            </div>

            <!-- MateriaCursadaId oculto + visualización -->
            <input asp-for="MateriaCursadaId" type="hidden" />
            <div class="form-group">
                <label>Materia Cursada</label>
                <input class="form-control" value="@Model.Inscripcion?.MateriaCursada?.CodigoCursada" readonly />
            </div>

            <!-- Botón -->
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
