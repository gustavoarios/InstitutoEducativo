@model Instituto.C.Models.Calificacion

@{
    ViewData["Title"] = "Editar Calificación";
}

<h1>Editar Calificación</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Fecha (oculta) -->
            <input asp-for="Fecha" type="hidden" />

            <!-- Ids ocultos -->
            <input asp-for="Id" type="hidden" />
            <input asp-for="AlumnoId" type="hidden" />
            <input asp-for="ProfesorId" type="hidden" />
            <input asp-for="MateriaCursadaId" type="hidden" />

            <!-- Nota -->
            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <select asp-for="Nota" class="form-control" asp-items="ViewBag.Notas"></select>
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>

            <!-- Alumno (solo texto) -->
            <div class="form-group">
                <label><strong>Alumno:</strong></label>
                <p>@ViewBag.AlumnoNombre</p>
            </div>

            <!-- Materia Cursada (solo texto) -->
            <div class="form-group">
                <label><strong>Materia:</strong></label>
                <p>@ViewBag.MateriaNombre</p>
            </div>

            <!-- Botones -->
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-controller="Profesores"
                   asp-action="DetallesMateriaProfesor"
                   asp-route-id="@ViewBag.MateriaCursadaId"
                   class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


